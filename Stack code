#include<stdio.h> 
#define MAX 5
    int a[MAX],top=-1;
    void push( );
    void pop( );
    void display( );
    int main(){
	int ch;
do
{
    printf("1.push\n2.pop\n3.display\nEnter choice:");
       scanf("%d",&ch);
       switch(ch)
       {
           case 1:push();
           break;
           case 2:pop();
           break;
           case 3:display();
           break;
           default:printf("Invalid Choice");
       }
       printf("\nPress 1 to continue");
       scanf("%d",&ch);
       }
       while(ch==1);
    }
void push()
{
    int x;
    if(top==MAX-1)
    {
        printf("overflow");
    }
    else{
          printf("Enter Data:");
    scanf("%d",&x);
        top++;
        a[top]=x;
    }
}
void pop()
{
    if(top==-1)
{
    printf("stack underflow");
}else{
 
    printf("Deleted data is %d",a[ top]);
    top--;
     }
}
void display() 
{
    int i;
    if(top>=0)
    {
    	printf("Elements:\n");
    for(i=top;i>=0;i--)
        printf("%d\n",a[i]);
    }
    else{
    	printf("stack is empty");
        }
}
